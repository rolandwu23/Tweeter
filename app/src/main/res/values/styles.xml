<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="GreyScaleEditTextFloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/label_text</item>
        <item name="android:textSize">@dimen/label_textSize</item>
    </style>

    <style name="GreyScaleEditTextLayout">
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textColorPrimary">@color/input_text</item>
        <item name="android:textColorHint">@color/input_text</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:background">@color/editText_background</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/label_text</item>
        <item name="colorButtonNormal">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
    </style>
</resources>
